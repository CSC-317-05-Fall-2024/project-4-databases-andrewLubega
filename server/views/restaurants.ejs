<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Traveler</title>
    <link rel="stylesheet" href="/style.css">
    <script defer src="/scripts/header.js"></script>
    <!-- <script defer src="/scripts/restaurantCards.js"></script> -->
    <!-- <script type="module" src="/scripts/restaurantCards.js"></script> -->
    <script defer type="module" src="/scripts/restaurantCards.js"></script>



</head>
<body>
    <div class="home-container">
        <header id="header"></header>

        <nav id="nav"></nav>

        <div class="restaurant-flex-grid">
            <% restaurants.forEach(restaurant => { %>
                <div class="restaurant">
                    <img src="<%= restaurant.photo %>" alt="<%= restaurant.name %>">
                    <h4><%= restaurant.name %></h4>
                    <p><%= restaurant.address %></p>
                    <p><%= restaurant.phone %></p>
                    <button class="delete" id="delete-<%= restaurant.id %>">delete</button>
                </div>
            <% }); %>
        </div>        
         
        <footer id="footer"></footer>
    </div>  
</body>
</html>


